<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.BetterConnect.FullscreenContainer"
    tools:context=".views.home.schedule.ScheduleFragment"
    android:background="@color/primaryColor"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:paddingStart="60dp"
        android:paddingTop="15dp"
        android:text="@string/review_the_activity_status"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_60sdp"
        android:background="@drawable/top_curve_shape"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:weightSum="1">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/assignTaskScheduleButton_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.76"
                android:background="@drawable/corner_radius_10"
                android:backgroundTint="@color/orange_600"
                android:text="@string/assign_task"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingVertical="@dimen/_5sdp"
                android:textStyle="bold"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/relativeLayoutFilterIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:layout_weight="0.25"
                android:gravity="center"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_filter" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:id="@+id/progress_SelectionView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_radius_10"
            android:elevation="@dimen/_2sdp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_25sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="@string/tasks_list"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/arrow_drop_down_circle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/progressTask_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_19sdp"
            tools:listitem="@layout/item_task"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            tools:itemCount="3"
           />

    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>