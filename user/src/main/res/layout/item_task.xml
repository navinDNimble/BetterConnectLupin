<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutAssignTaskProgress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_radius_10"
    android:paddingStart="@dimen/_10sdp"
    android:paddingVertical="@dimen/_5sdp"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="1dp"
    android:elevation="3dp"
    android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAssignTaskTaskTitleIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/orange_600"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/units"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="task name" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAssignTaskStartDateIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="2023-09-10 to 2023-09-10"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAssignTaskTaskTitleIn"
        app:layout_constraintEnd_toStartOf="@+id/units"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewActivityNameIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        tools:text="Farmer Training To"
        android:paddingBottom="@dimen/_5sdp"
        app:layout_constraintEnd_toStartOf="@+id/units"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAssignTaskStartDateIn"
        android:textStyle="bold" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:minWidth="80dp"
        tools:text="100/200"
        android:textColor="@color/primaryColor"
        android:layout_marginEnd="@dimen/_2sdp"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/corner_radius_10"
        android:elevation="10dp"
        android:gravity="center"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>